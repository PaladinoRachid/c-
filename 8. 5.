#include <iostream>
#define M 4
#define N 3

using namespace std;

void lematriz (  int  mat[M][N]) 
{
    int i, j;
    for (i = 0; i < M; i++)
    {
        for ( j = 0; j < N; j++)
        {
            cin >> mat[i][j]; 
        }
    }
}

void copiazera(int A[M][N], int B[M][N])
{
    int i, j;
    
    for (i = 0; i < M; i++)
    {
        for ( j = 0; j < N; j++)
        {
            A[i][j] = B[i][j];
            B[i][j] = 0;
            
        }
    }
}

void imprimematriz(int mat[M][N])
{
    int i, j;
    for (i = 0; i < M; i++)
    {
        for ( j = 0; j < N; j++)
        {
            cout << mat[i][j] << " ";
        }
        cout << endl;
    }
    cout << endl;
}

int main()
{
  int A[M][N]; 
  int B[M][N];
  
  lematriz(A);
  
  lematriz(B);
  
  copiazera(A, B);
  
  cout << "Matriz A:\n";
  imprimematriz(A);

  cout << "Matriz B:\n";
  imprimematriz(B);
  
  return 0;
}
