#include <iostream>
#include <cstring>
#define TAM 100

using namespace std;

void inverte(char string[])
{
    int k ,i ;
    char aux;
    k = strlen(string);
    int q = k;
    
    for ( i = 0; i < k/2; i++)
    {
        aux = string [i];
        string[i] = string[q-1];
        string [q-1] = aux;
        q--;
    }
}

int main()
{
    int i;
    char string[TAM];
    cin.getline(string, TAM-1);
    
    inverte(string);
    
    for ( i = 0; string[i] != '\0'; i++)
    {
        cout << string[i];
    }
    
    return 0;
}
