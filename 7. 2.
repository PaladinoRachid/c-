#include <iostream>
#define TAM 500

using namespace std;

int substitui ( char cadeia[])
{
    int i, k=0;
    for ( i = 0; cadeia[i]!= '\0'; i++)
    {
        if( cadeia[i] == 'a')
        {
            cadeia [i] = 'b';
            k++;
        }
    }
    return k;
}

int main()
{
    int k;
    char cadeia [TAM];
    cin.getline(cadeia, TAM-1);
    k = substitui(cadeia);
    int i;
    
    for ( i= 0; cadeia[i] != '\0'; i++)
    {
        cout << cadeia[i];
    }
    cout << endl;
    cout << "Caracteres Modificados: "<< k;

    return 0;
}
