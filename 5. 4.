#include <iostream>

using namespace std;

int main()
{
    int x, c, q, p;
    
    do
    {
    cin >> x; 
    } while (x <= 0); 
    
    cout << "PotÃªncias de 2 entre '0' e '"<< x <<"':" << endl;
    
    for (c= 0; c <= x; c++)  
    {
        q = 1; 
        p = 0; 
        while( q <= c) 
        {
            
            if (q == c)
            {
                cout << "-> 2^"<< p << " = "<< c << endl;
            }
            q = q*2; 
            p++; 
        }
    }

      
    return 0;
}
