#include <iostream>
#define TAM 100
using namespace std;

int codifica( char string[])
{
    int i, c =0;
    for (i = 0; string[i]!= '\0'; i++)
    {
        if (string[i] == '-')
        {
            string[i] = 'e';
            c ++;
        }
    }
    return c;
}

int main()
{
    char string [TAM];
    int p;
    
    cin.getline(string, TAM-1);
    
    p = codifica(string);
    
    cout << "String traduzida: " << string << endl;
    cout << "Foram modificados "<< p <<" caracteres.";
}
