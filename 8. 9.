#include <iostream>
#include <iomanip>
#define M 4

using namespace std;

int main()
{
   int mat[M][M];
   int maior, menor;
   int i, j;
   int c = 0, q = 0;
   float sp = 0, si = 0;
   for (i = 0; i < M; i++)
   {
       for(j=0; j< M; j++)
       {
           cin>> mat[i][j];
           if(i == 0 && j == 0)
           {
               maior = mat[i][j];
               menor = mat[i][j];
           }
           else
           {
               if(mat[i][j] < menor)
               {
                   menor = mat[i][j];
               }
               if(mat[i][j] > maior)
               {
                   maior = mat[i][j];
               }
           }
           if (mat[i][j]%2 == 0)
           {
               sp += mat[i][j];
               c++;
           }
           else
           {
               si += mat[i][j];
               q++;
           }
       }
   }
       cout << "Maior: "<< maior << endl;
       cout << "Menor: "<< menor << endl;
       cout << fixed << setprecision(2);
       cout << "Media Pares: " << sp/c << endl;
       cout << "Media Impares: " << si/q << endl;
   
   
   return 0;
}
